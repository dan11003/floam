<?xml version="1.0"?>
<launch>

    <arg name="export_odom_pcd" default="true" />
    <arg name="odom_save_posegraph" default="false" />
    <arg name="odom_save_odom" default="false" />
    <arg name="odom_save_balm" default="false" />

    <arg name="export_slam_pcd" default="true" />
    <arg name="slam_save_posegraph" default="false" />
    <arg name="slam_save_odom" default="false" />
    <arg name="slam_save_balm" default="true" />

    <arg name="slam_param_file" default="$(find lio_sam)/config/params_structor_indoor.yaml" />
    <!--arg name="slam_param_file" default="$(find lio_sam)/config/params_structor_outdoor.yaml" /-->

    <!-- For Velodyne VLP-16 -->
    <param name="scan_line" value="16" />
    <!--- Sim Time -->
    <param name="scan_period" value="0.1" />

    <param name="vertical_angle" type="double" value="2.0" />
    <param name="map_resolution" type="double" value="0.5" />
    <param name="output_downsample_size" type="double" value="0.3" />
    <param name="deskew" type="bool" value="true" />
    <param name="imu_topic" type="string" value="/nav/filtered_imu/data" /> <!-- Structor FLOAM -->
    <param name="loss_function" type="string" value="Cauchy" />

    <param name="directory_output" value="/home/$(env USER)/Downloads/export/" /> <!-- for both liosam and floam -->
    <!-- ODOM EXPORTS -->
    <param name="export_odom_pcd" type="bool" value="$(arg export_odom_pcd)" />
    <param name="odom_save_posegraph" type="bool" value="$(arg odom_save_posegraph)" />
    <param name="odom_save_odom" type="bool" value="$(arg odom_save_odom)" />
    <param name="odom_save_balm" type="bool" value="$(arg odom_save_balm)" />

    <!-- SLAM EXPORTS -->
    <param name="export_slam_pcd" type="bool" value="$(arg export_slam_pcd)" />
    <param name="slam_save_posegraph" type="bool" value="$(arg slam_save_posegraph)" />
    <param name="slam_save_odom" type="bool" value="$(arg slam_save_odom)" />
    <param name="slam_save_balm" type="bool" value="$(arg slam_save_balm)" />

    <param name="max_dis" type="double" value="90.0" />
    <param name="min_dis" type="double" value="0.5" />

    <node pkg="floam" type="floam_odom_estimation_node" name="floam_odom_estimation_node" output="screen"/>
    <node pkg="floam" type="floam_laser_processing_node" name="floam_laser_processing_node" output="screen"/>
    <node pkg="floam" type="floam_laser_mapping_node" name="floam_laser_mapping_node" output="screen"/>
    

    <include file="$(find lio_sam)/launch/slam_gps.launch">
      <arg name="slam_param_file" value="$(arg slam_param_file)" />
    </include>
    
    <arg name="rviz" default="true" />
    <group if="$(arg rviz)">
        <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find floam)/rviz/slam.rviz" />
    </group>
    
    


</launch>
